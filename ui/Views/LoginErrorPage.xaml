<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ui.Views.LoginErrorPage"
             Title="LoginErrorPage">
    <VerticalStackLayout Spacing="20" Padding="20">
        <Label 
            Text="Je hebt verkeerde ingloggegevens gegeven/ je hebt nog geen account"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
            Text="Klik hier om te registreren"
            Clicked="Button_Clicked"/>
            
        <Button
            Text="Terug naar inloggen"
            Clicked="BackToLogin_Clicked"/>
        
    </VerticalStackLayout>
</ContentPage>